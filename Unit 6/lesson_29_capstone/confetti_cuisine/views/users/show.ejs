
<div class="profile">
  <h1>User Data for <%= user.fullName %></h1>

  <table class="table">
    <tr>
      <th>Name</th>
      <td><%= user.fullName %></td>
    </tr>
    <tr>
      <th>Email</th>
      <td><%= user.email%></td>
    </tr>
    <tr>
      <th>Zip Code</th>
      <td><%= user.zipCode%></td>
    </tr>
    <tr>
      <th>Password</th>
      <td><%= user.password%></td>
    </tr>
  </table>

  <% if(user.subscribedAccount) { %>
    <h4> This user has a
    <a href=<%=`/subsribers/${user.subscribedAccount}` %>>
    subscribed acount
    </a>.
    </h4>
    <% } %>
  </div>
