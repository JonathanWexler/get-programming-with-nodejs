<div class="text-center">
  <form class="form-signin" action=<%= `/subscribers/${subscriber._id}/update?_method=PUT` %> method="POST">
    <h2 class="form-signin-heading">Update subscriber:</h2>

    <label for="inputName" class="sr-only">Name</label>
    <input type="text" name="name" id="inputName" class="form-control" placeholder="Name" autofocus value=<%= subscriber.name %>>

    <label for="inputEmail" class="sr-only">Email</label>
    <input type="text" name="email" id="inputEmail" class="form-control" placeholder="Email" autofocus value=<%= subscriber.email %>>

    <label for="inputZipCode" class="sr-only">Zip Code</label>
    <input type="text" name="zipCode" id="inputZipCode" pattern="\d*" class="form-control" placeholder="Zip Code" value=<%= subscriber.zipCode %> >

    <button class="btn btn-lg btn-primary btn-block" type="submit"> Update</button>
  </form>
</div>
