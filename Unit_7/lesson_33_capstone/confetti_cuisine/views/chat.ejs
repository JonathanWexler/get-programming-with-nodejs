<% if (currentUser) { %>
  <h1>Chat</h1>
  <form id="chatForm">
    <input id="chat_input" type="text">
    <input id="chat_user_id" type="hidden" value='<%= currentUser._id%>'>
    <input id="chat_user_name" type="hidden" value='<%= currentUser.fullName%>'>
    <input type="submit" value="Send">
  </form>
  <div id="chat"></div>
<%}%>
